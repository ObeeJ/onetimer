# Database Configuration
# For Docker: postgres://onetimer:onetimer2025@postgres:5432/onetimer?sslmode=disable
# For production: Update with your production database credentials
DATABASE_URL=postgresql://onetimer:onetimer2025@postgres:5432/onetimer?sslmode=disable

# Supabase Configuration (Get from https://app.supabase.com)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-from-supabase
SUPABASE_SERVICE_KEY=your-service-key-from-supabase

# JWT Configuration (Generate a strong random string for production)
# Example: openssl rand -base64 32
JWT_SECRET=your-strong-secret-key-change-in-production

# AWS/Supabase Storage Configuration
# If using Supabase Storage, configure these with your Supabase Storage credentials
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=onetimer-uploads
S3_ENDPOINT=https://your-project.supabase.co/storage/v1/s3

# Paystack Configuration (Get your keys from https://dashboard.paystack.com)
PAYSTACK_SECRET_KEY=sk_test_your_test_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here

# SendGrid Configuration (Get your API key from https://sendgrid.com)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@onetimer.com
SENDGRID_FROM_NAME=OneTimer

# Application Configuration
APP_ENV=development
APP_PORT=8081
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://onetimer:8081

# Redis Configuration
REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
